// **************************************
// * Dev Container Configuration        *
// * Project: 4rm0Byte                  *
// * Description: This configuration    *
// * sets up a tailored development     *
// * environment for Hugo websites      *
// * with essential tools and VS Code   *
// * extensions.                        *
// **************************************
{
	// Name of the development container
	"name": "4rm0Byte Development Container",
	// Use the custom Dockerfile
	"build": {
		"dockerfile": "Dockerfile"
	},
	// Custom VS Code extensions
	"customizations": {
		"vscode": {
			"extensions": [
				// ==================================
				// üåü UI & THEMES
				// ==================================
				"tal7aouy.icons",
				"ahmadawais.shades-of-purple",
				"vscode-icons-team.vscode-icons",
				"ybaumes.highlight-trailing-white-spaces",
				"oderwat.indent-rainbow",

				// ==================================
				// üöÄ GENERAL WEB DEVELOPMENT
				// ==================================
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"streetsidesoftware.code-spell-checker",

				// ==================================
				// üèóÔ∏è HUGO & GO DEVELOPMENT
				// ==================================
				"golang.go",
				"budparr.language-hugo-vscode",
				"rusnasonov.vscode-hugo",
				"fivethree.vscode-hugo-snippets",
				"kaellarkin.hugo-shortcode-syntax",
				"huckbit.go-html-template",
				"tamasfe.even-better-toml",

				// ==================================
				// üìú HTML, HTMX, & TEMPLATE ENGINES
				// ==================================
				"sidthesloth.html5-boilerplate",
				"antfu.iconify",
				"pranaygp.vscode-css-peek",
				"simonhaenisch.htmx",

				// ==================================
				// üé® CSS, SCSS, & TAILWIND CSS
				// ==================================
				"bradlc.vscode-tailwindcss",
				"mrmlnc.vscode-scss",
				"heybourn.headwind",

				// ==================================
				// ‚ö° JAVASCRIPT & TYPESCRIPT
				// ==================================
				"xabikos.javascriptsnippets",
				"dsznajder.es7-react-js-snippets",

				// ==================================
				// üõ†Ô∏è PRODUCTIVITY & UTILITIES
				// ==================================
				"eamodio.gitlens",
				"gruntfuggly.todo-tree",
				"usernamehw.errorlens",
				"formulahendry.auto-rename-tag",
				"christian-kohler.path-intellisense",
				"redhat.vscode-yaml",

				// ==================================
				// üìù MARKDOWN & WRITING
				// ==================================
				"yzhang.markdown-all-in-one",
				"davidanson.vscode-markdownlint",
				"bierner.markdown-mermaid"
			]
		}
	},
	// Ports to forward from the container to the host
	"forwardPorts": [
		1313,
		8081
	],
	// User settings for the container
	"remoteUser": "root",
	// Commands to run after the container is created
	"postCreateCommand": "npm install && go mod tidy"
}
